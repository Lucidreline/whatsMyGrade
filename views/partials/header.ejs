<body>
    <header>
        <div class="main-head">
            <nav>
                <h1 class="nav-text" id="logo">What's My Grade</h1>
                <ul>
                    <li>
                        <a class="nav-text" href="/">Home</a>
                    </li>
                    <li>
                        <a class="nav-text" href="/courses">My Courses</a>
                    </li>
                    <li>
                        <% if (loggedInUser){ %>
                            <a class="nav-text" href="/user/logout">Log Out</a>
                        <%}else{ %>
                            <a class="nav-text" href="/user/login">Log In</a>
                        <% } %>
                    </li>
                </ul>
            </nav>
            <div class="flash">
                    <% if(success && success.length > 0){ %>
                        <div class="flash-message success">
                            <%= success %>
                        </div>
                    
                    <% }if(error && error.length > 0){ %>
                        <div class="flash-message error">
                            <%= error %>
                        </div>
                    <% } %>
            </div>
        </div>
    </header> 