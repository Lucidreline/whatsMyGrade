<% include ../partials/header %>

<section id="user-forms">
    <div class="form-wrapper">
        <header class='form-head'>
            <h2>Log In</h2>
        </header>
        <form action="/user/login" method="POST">
            <div class="form-row">
                <div class="left-form-box">
                    <label for="username">Username:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" type="text" name="username" placeholder="Username" required>
                </div>
            </div>
            <div class="form-row">
                <div class="left-form-box">
                    <label for="password">Password:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" type="Password" name="password" placeholder="Password" required>
                </div>
            </div>
            <button class="submit-btn" type="submit">Log In</button>
        </form>
    </div>
    
    <div class="form-wrapper">
        <header class='form-head'>
            <h2>Sign Up</h2>
        </header>
        <form action="/user/register" method="POST">
            <div class="form-row">
                <div class="left-form-box">
                    <label for="name">First Name:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="text" name="firstName" placeholder="First Name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="left-form-box">
                    <label for="email" >Email: </label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="email" name="email" placeholder="Email" required>
                </div>
            </div>
            <div class="form-row">
                <div class="left-form-box">
                    <label for="username">Username:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="text" name="username" placeholder="Username" required>
                </div>
            </div>
            <div class="form-row">
                <div class="left-form-box">
                    <label for="password">Password:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="Password" name="password" placeholder="Password" required>
                </div>
            </div>
            <button class="submit-btn" type="submit">Create Account</button>
        </form>
    </div>
</section>

<% include ../partials/footer %>