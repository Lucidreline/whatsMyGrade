<% include ../partials/header %>

<section id="user-forms">
    <div class="form-wrapper">
        <form action="/user/<%= loggedInUser._id %>/delete?_method=DELETE" method="POST">
            <button class="circle-btn delete-btn">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
        <header class='form-head'>
            <h2>Edit Account</h2>
        </header>
        <form action="/user/<%= loggedInUser._id %>/edit?_method=PUT" method="POST">
            <div class="form-row">
                <div class="left-form-box">
                    <label for="name">First Name:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="text" name="user[firstName]" placeholder="First Name" value="<%= loggedInUser.firstName %>"required>
                </div>
            </div>
            <div class="form-row">
                <div class="left-form-box">
                    <label for="email" >Email: </label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="email" name="user[email]" placeholder="Email" value="<%= loggedInUser.email %>" required>
                </div>
            </div>
            <div class="form-row">
                <div class="left-form-box">
                    <label for="username">Username:</label>
                </div>
                <div class="right-form-box">
                    <input class="under-line-input" required type="text" name="user[username]" placeholder="Username" value="<%= loggedInUser.username %>" required>
                </div>
            </div>
            <button class="submit-btn" type="submit">Update</button>
        </form>
    </div>
</section>

<% include ../partials/footer %>